<%= render partial: 'shared/menu', locals: { s: 'matches' } %>
<h2>
  <i class="fa fa-futbol-o"></i>
  Mecze
</h2>

<ul class="nav nav-tabs" role="tablist">
  <li class="nav-item" role="presentation">
    <%= link_to '#future', class: "nav-link #{'active'}", aria: { controls: 'future' }, role: 'tab', data: { toggle: 'tab' } do %>
      <span class="badge badge-primary"><%= @matches_not_finished.size %></span>
      Aktualne
    <% end %>
  </li>
  <li class="nav-item" role="presentation">
    <%= link_to '#finished', class: 'nav-link', aria: { controls: 'finished' }, role: 'tab', data: { toggle: 'tab' } do %>
      <span class="badge badge-primary"><%= @matches_finished.size %></span>
      Zako≈Ñczone
    <% end %>
  </li>
</ul>

<div class="tab-content">
  <div id="future" class="tab-pane fade show <%= 'active'%>" role="tabpanel">
    <%= render partial: 'matches', locals: { matches: @matches_not_finished } %>
  </div>
  <div id="finished" class="tab-pane fade" role="tabpanel">
    <%= render partial: 'matches', locals: { matches: @matches_finished } %>
  </div>
</div>
