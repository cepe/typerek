        <span class="float-right font-weight-bold">
          <%= (number_with_precision(match.win_tie_b) || '---') %>
        </span>
        <div class="clearfix"></div>
      <% end %>
    </div>
    <div class="col-4 pb-2 pt-2">
      <%= link_to set_type_match_path(match, result: 'not_tie'), data: { turbo_method: :post },class: "btn text-nowrap btn-sm btn-block #{answer&.not_tie? ? 'btn-info' : 'btn-outline-info'} #{'disabled' if match.started?}" do %>
        <span class="float-left">12</span>
        <span class="float-right font-weight-bold">
          <%= (number_with_precision(match.not_tie) || '---') %>
        </span>
        <div class="clearfix"></div>
      <% end %>
    </div>
  </div>
<% end %>