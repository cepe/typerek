<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <%= form_for @user, url: invitation_path, html: { method: :put } do |f| %>
        <h2 class="form-signin-heading text-center text-muted">Ustaw hasło</h2>
        <h3 class="text-center">Cześć <%= @user.username %></h3>

        <%= f.hidden_field :username %>
        <div class="form-group">
          <%= f.label :password, class: 'sr-only' %>
          <%= f.password_field :password, class: 'form-control', autocomplete: 'off', placeholder: 'Password', tabindex: 1 %>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class: 'sr-only' %>
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: 'off', placeholder: 'Confirm Password', tabindex: 2 %>
        </div>
        <%= f.submit 'Zapisz hasło', class: 'btn btn-primary btn-block', tabindex: 3 %>
      <% end %>
    </div>
  </div>
</div>
